doctype html

html
	head
		meta(name='format-detection' content='telephone=no')
		meta(name='viewport' content='width=device-width, height=device-height, initial-scale=1.0, maximum-scale=1.0, user-scalable=0')
		meta(http-equiv='X-UA-Compatible' content='IE=edge')
		meta(charset='utf-8')

		// Stylesheets
		link(rel='stylesheet' href='styles/vendor.min.css')
		link(rel='stylesheet' href='styles/main.css')

	body(ng-app='commercial2' ng-cloak ng-class='{ "print-window": currentPath.indexOf("print") != -1, "mail-window": currentPath.indexOf("mail") != -1 }')

		div(layout='column' layout-fill)

			block header

			block page

			block footer

		//- Inicio do truque para evitar erro de nao carregar jQuery e outros plugins no electron
		script
			| if (typeof module === 'object') {window.module = module; module = undefined;}

		script(src='scripts/vendors.min.js')
		script(src='scripts/app.min.js')

		//- Fim do truque
		script
			| if (window.module) module = window.module;