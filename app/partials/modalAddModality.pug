.body(layout='column' layout-fill)
	//- p
		| Deseja adicionar a modalidade?

	.md-inline-form(layout='row' layout-wrap)
		md-input-container(flex='40')
			label Valor
			input(ng-model='ctrl.value' currency symbol='"R$ "' number-only)

		span(flex)

		md-input-container
			label Vencimento
			md-datepicker(ng-model='d' md-hide-icons='all' md-is-open='ctrl.isCalendarOpen' md-min-date='ctrl.minDate')

		md-button.md-icon-button.md-raised.md-primary(ng-click='ctrl.isCalendarOpen = true')
			md-icon(md-font-icon='fa fa-calendar')

	.offset-top-15.well
		table
			tr
				td.text-right Prazo: 
				td {{ctrl.term.term_description}}
			tr
				td.text-right Modalidade:
				td {{ctrl.modality.modality_description}}
			tr
				td.text-right Valor das parcelas:
				td 
					span.label.label-success {{ctrl.value / ctrl.term.term_installment | currency: 'R$ '}}

.footer(layout='row' layout-align='end center')
	md-button.md-primary(name='positive' ng-click='ctrl._close()')
		| &nbsp; Confirmar &nbsp;

	md-button.md-primary(name='positive' ng-click='ctrl._cancel()')
		| &nbsp; Fechar &nbsp;