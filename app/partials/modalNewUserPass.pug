.body(layout='column')
	p {{ctrl.text}}

	md-input-container
		label 
			| Senha atual
		input(type='password' ng-model='ctrl.data.user_pass' ng-model-options='{ debounce: 250 }' keys-shortcuts enter='ctrl.goTo("user_new_pass")')

	md-input-container
		label 
			| Nova senha
		input(name='user_new_pass' type='password' ng-model='ctrl.data.user_new_pass' ng-model-options='{ debounce: 250 }' keys-shortcuts enter='ctrl.goTo("user_new_pass_confirm")')

	md-input-container
		label 
			| Confirme sua nova senha
		input(name='user_new_pass_confirm' type='password' ng-model='ctrl.data.user_new_pass_confirm' ng-model-options='{ debounce: 250 }' keys-shortcuts enter='ctrl.update(ctrl.data)')

.footer(layout='row' layout-align='center center')
	md-button.md-raised(ng-click='ctrl.update(ctrl.data)' md-colors='{background: "commercialGreen"}')
		| &nbsp;
		i.fa.fa-check &nbsp;
		| Atualizar &nbsp;

	md-button.md-raised(ng-click='ctrl._cancel()')
		| &nbsp;
		i.fa.fa-remove &nbsp; 
		| Cancelar &nbsp;