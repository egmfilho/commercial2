.body(layout='column')
	p.well.offset-bottom-15 
		b.text-400 Produto: &nbsp;
		| {{ctrl.item.product.product_code}} - {{ctrl.item.product.product_name}}
		br
		b.text-400 Tabela de preços: &nbsp;
		| {{ctrl.item.user_price.price_erp.price_name}}
		br
		b.text-400 Valor unitário: &nbsp;
		| {{ctrl.item.product.price.price_value | currency:'R$ '}}

	div(layout='row')
		md-input-container(flex='25')
			label 
				| Quantidade
			input(name='edit.amount' ng-model='ctrl.item.order_item_amount' currency number-only
					keys-shortcuts enter='ctrl.focusOn("input[name=\'edit.al-discount\']")')
		
		md-input-container(flex='25')
			label 
				| Desconto %
			input(name='edit.al-discount' ng-model='ctrl.item.order_item_al_discount' 
					ng-model-options="{ updateOn: 'default blur' }"
					ng-blur='ctrl.item.setAlDiscount(ctrl.item.order_item_al_discount)'
					keys-shortcuts enter='ctrl.focusOn("input[name=\'edit.vl-discount\']")'
					currency trim max-fraction-size='4' number-only)
		
		md-input-container(flex='25')
			label 
				| Desconto R$
			input(name='edit.vl-discount' ng-model='ctrl.item.order_item_vl_discount' 
					ng-model-options="{ updateOn: 'default blur' }"
					ng-blur='ctrl.item.setVlDiscount(ctrl.item.order_item_vl_discount)'
					keys-shortcuts enter='ctrl.focusOn("button[name=\'positive\']")'
					currency number-only)

		md-input-container(flex='25')
			label 
				i.fa.fa-lock &nbsp;
				| Total
			input(ng-value='ctrl.item.getValueTotal() | currency:"R$ "' tabindex='-1' readonly)

.footer(layout='row' layout-align='end center')
	md-button.md-primary(name='positive' ng-click='ctrl._close(ctrl.item)')
		| &nbsp; Confirmar &nbsp;

	md-button.md-primary(ng-click='ctrl._cancel()')
		| &nbsp; Cancelar &nbsp;