.irineu(layout='row' layout-align='start center' layout-fill)
	i.fa.fa-list
	span Selecionar modalidade

.body(layout='column')
	.well.text-light.offset-bottom-15
		b Código: &nbsp;
		| {{ctrl.term.term_code}} 
		br
		b Descrição: &nbsp;
		| {{ctrl.term.term_description}}

	.container-table
		table.table(name='clementino')
			tbody
				tr(ng-repeat='m in ctrl.term.modality track by $index' ng-click='ctrl.hoverIndex = $index' ng-dblclick='ctrl._close(m)' keys-shortcuts enter='ctrl._close(m)')
					td {{m.modality_code}}
					td {{m.modality_description}}
					td {{ctrl.term.term_installment}}x ({{ctrl.value_total / ctrl.term.term_installment | currency:'R$ '}})

.footer(layout='row' layout-align='end center')
	md-button.md-primary.md-raised(ng-click='ctrl.close()')
		| &nbsp; Ok &nbsp;