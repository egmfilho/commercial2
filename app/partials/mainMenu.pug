md-content(layout='column')
	.user(layout='row' layout-wrap)
		.avatar(flex='20')
			md-icon(md-font-set='material-icons') account_circle
		.description(flex)
			p 
				b {{ctrl.currentUser.user_name}}
				br
				| {{ctrl.currentUser.user_mail}}
				br
				| Último login: {{ctrl.currentUser.user_last_session.user_session_date | date:'short'}}
		.pass(flex='15')
			md-button.md-icon-button.md-raised.md-primary(ng-click='ctrl.newUserPass()')
				md-icon(md-font-icon='fa fa-unlock-alt' aria-label='Atualizar Senha')
	
	.modules(layout='row' layout-wrap)
		//- .module(flex='50' layout-align='center')
			md-button(ng-click='ctrl._goTo("/")')
				.home-module
					md-icon(md-font-set='material-icons') home
				p Início

		.module(flex='50' layout-align='center')
			md-button(ng-click='ctrl.newOrder()')
				.order-module
					md-icon(md-font-set='material-icons') note_add
				p Novo

		.module(flex='50' layout-align='center')
			md-button(ng-click='ctrl._goTo("/")')
				.home-module
					md-icon(md-font-set='material-icons') description
				p Abrir

	.modules(layout='row' layout-wrap)
		.module(flex='50' layout-align='center')
			md-button(ng-click='ctrl._goTo("/config")')
				.settings-module
					md-icon(md-font-set='material-icons') build
				p Ajustes

		.module(flex='50' layout-align='center')
			md-button(ng-click='ctrl.logout()')
				.logout-module
					md-icon(md-font-set='material-icons') exit_to_app
				p Logout