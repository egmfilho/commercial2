.body(layout='column' layout-fill)
	
	.custom-textarea(flex)
		label Observações do orçamento
		textarea(name='order-note' ng-model='ctrl.order_note' rows='3')

	span(style='margin: 16px;')

	.custom-textarea(flex)
		label Observações da Nota
		textarea(ng-model='ctrl.order_note_doc' rows='3')

.footer(layout='row' layout-align='end center' style='border-top: 1px solid $border-color')
	md-button.md-primary.md-raised(ng-click='ctrl._close({ order_note: ctrl.order_note, order_note_doc: ctrl.order_note_doc })')
		| &nbsp; Ok &nbsp;