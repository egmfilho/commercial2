extends ./templates/_skeleton.pug

block page
	div(ng-view='' autoscroll layout='column' flex)

block header
	header(ng-if='currentPath !== "/login" && currentPath !== "/logout" && currentPath !== "/loading" && currentPath.indexOf("/order/") < 0')
		md-toolbar
			.md-toolbar-tools
				md-button.md-icon-button(ng-click='showMainMenu()')
					md-icon(md-font-icon='fa fa-bars' aria-label='Menu')
				h1 {{titleBarText && titleBarText.length ? titleBarText : 'Commercial - Gestor de vendas'}}
				span.flex
				//- md-menu
					md-button.md-icon-button(ng-click='$mdMenu.open($event)')
						md-icon(md-font-icon='fa fa-gear' aria-label='Ajustes')
					md-menu-content
						md-menu-item
							md-button(ng-click='newUserPass()' style='text-align: center') 
								md-icon(md-font-set='material-icons' md-menu-align-target) account_circle
								|  Redefinir senha de usuário

//- block footer
	footer(ng-if='currentPath !== "/login" && currentPath !== "/logout" && currentPath !== "/loading" && currentPath.indexOf("/order/print/") < 0')
		md-toolbar
			div(layout='row' layout-align='center center' flex)
				| Futura Agência - 2017