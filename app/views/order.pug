					button(ng-click='$mdMenu.open()') Arquivo
					md-menu-content
						md-menu-item
							md-button(ng-click='')
								i.fa.fa-file-o
								|  Novo
						md-menu-item
							md-button(ng-click='')
								i.fa.fa-folder-open-o
								|  Abrir
						md-menu-divider
						md-menu-item
							md-button(ng-click='')
								i.fa.fa-floppy-o
								|  Salvar
