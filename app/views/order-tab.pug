md-toolbar.md-menu-toolbar.order-toolbar
	div(layout='row')
		md-toolbar-filler(layout layout-align='center center' style='background-color: #f38221')
			md-icon.fa.fa-2x(md-font-icon='fa-file-text' aria-label='Menu')

		div
			.md-toolbar-tools
				h1 Novo Orçamento
			md-menu-bar
				md-menu
					button(ng-click='$mdMenu.open()') Arquivo
					md-menu-content
						md-menu-item
							md-button(ng-click='')
								i.fa.fa-file-o
								|  Novo
						md-menu-item
							md-button(ng-click='')
								i.fa.fa-folder-open-o
								|  Abrir
						md-menu-divider
						md-menu-item
							md-button(ng-click='')
								i.fa.fa-floppy-o
								|  Salvar
						md-menu-item
							md-button(ng-click='' disabled)
								i.fa.fa-share-square-o
								|  Exportar
						md-menu-divider
						md-menu-item
							md-button(ng-click='' disabled)
								i.fa.fa-print
								|  Imprimir
						md-menu-item
							md-button(ng-click='' disabled)
								i.fa.fa-envelope-o
								|  Enviar por email
						md-menu-divider
						md-menu-item
							md-button(ng-click='' disabled)
								i.fa.fa-trash-o
								|  Excluir
				md-menu
					button(ng-click='$mdMenu.open()') Editar
					md-menu-content
						md-menu-item
							md-button(ng-click='')
								| Vendedor
				md-menu
					button(ng-click='$mdMenu.open()') Ver
					md-menu-content
						md-menu-item
							md-button(ng-click='')
								| Vendedor
				md-menu
					button(ng-click='$mdMenu.open()') Ajuda
					md-menu-content
						md-menu-item
							md-button(ng-click='order.toast("Tooooastyyyy bolado!")')
								| Sobre

md-content(flex layout-padding)

	.order-container-tab
		md-card
			md-card-content
				md-tabs(md-selected='selectedTabIndex' md-dynamic-height md-border-bottom)
					//- Vendedor
					md-tab(label='Vendedor')
						md-content(layout-padding)
							md-card(flex='60')
								md-card-header
									md-card-header-text
										span.md-title Vendedor
										span.md-subhead Informe o vendedor
								md-card-content
									div(layout-gt-xs='row')
										md-input-container
											label Código
											input(ng-model='codigo')
										md-autocomplete(flex required 
														md-input-name='autocompleteField'
														md-input-minlength='2'
														md-input-maxlength='18'
														md-no-cache='order.noCache'
														md-selected-item='order.selectedItem'
														md-search-text='order.searchText'
														md-items='item in order.querySearch(order.searchText)'
														md-item-text='item.display'
														md-require-match
														md-floating-label='Nome')
											md-item-template
												div(md-highlight-text='order.searchText' style='line-height: 2') {{item.display}}
												div(style='font-size: 11px;line-height: 1')
													| Código: 
													| {{item.code}}
					//- Produtos
					md-tab(label='Produtos')
						md-content(layout-padding)
							md-card
								md-card-header
									md-card-header-text
										span.md-title Produtos
										span.md-subhead Adicione ou remova produtos
								md-card-content
									div(layout-gt-xs='row')
										md-input-container(flex='25')
											label Código
											input(ng-model='codigo')
										md-autocomplete(flex 
														md-input-name='autocompleteField'
														md-input-minlength='2'
														md-input-maxlength='18'
														md-no-cache='order.noCache'
														md-selected-item='order.selectedItem'
														md-search-text='order.searchText'
														md-items='item in order.querySearch(order.searchText)'
														md-item-text='item.display'
														md-require-match
														md-floating-label='Descrição')
											md-item-template
												div(md-highlight-text='order.searchText' style='line-height: 2') {{item.display}}
												div(style='font-size: 11px;line-height: 1')
													| Código: 
													| {{item.code}}
										md-input-container(flex='25')
											label Valor unitário
											input(ng-model='valor' tabindex='-1' readonly disabled)
									div(layout='row')
										md-input-container(flex='25')
											label Quantidade
											input(ng-model='quantidade')
										md-input-container(flex='25')
											label Desconto %
											input(ng-model='descontoAl')
										md-input-container(flex='25')
											label Desconto R$
											input(ng-model='descontoVl')
										md-input-container(flex='25')
											label Total
											input(ng-model='total' tabindex='-1' readonly disabled)


									//- div(layout='row')
										table.products-table
											thead
												tr
													th Produto
													th Un
													th Qtd
													th Vl unit
													th Desc %
													th Desc R$
													th Total
													th
											tbody
												tr(ng-repeat='n in getNumber(10) track by $index')
													td 00000{{$index + 1}} Silicone bolado sinistramente qualificado
													td UN
													td 10
													td R$ 15,00
													td 10,00%
													td R$ 15,00
													td R$ 135,00 &nbsp;
													td
														md-button.md-icon-button
															md-icon.fa(md-font-icon='fa-ellipsis-v')

					//- Cliente
					md-tab(label='Cliente')
						md-content(layout-padding layout='row')
							md-card(flex='80' layout-align='center')
								md-card-header
									md-card-header-text
										span.md-title Cliente
										span.md-subhead Informe o cliente
								md-card-content
									div(layout-gt-xs='row')
										md-input-container
											label Código
											input(ng-model='codigo')
										md-autocomplete(flex required 
														md-input-name='autocompleteField'
														md-input-minlength='2'
														md-input-maxlength='18'
														md-no-cache='order.noCache'
														md-selected-item='order.selectedItem'
														md-search-text='order.searchText'
														md-items='item in order.querySearch(order.searchText)'
														md-item-text='item.display'
														md-require-match
														md-floating-label='Nome')
											md-item-template
												div(md-highlight-text='order.searchText' style='line-height: 2') {{item.display}}
												div(style='font-size: 11px;line-height: 1')
													| Código: 
													| {{item.code}}
					//- Observações
					md-tab(label='Observações')
						md-content(layout-padding layout='row')
							md-card(flex='60' layout-align='center')
								md-card-header
									md-card-header-text
										span.md-title Observações
										span.md-subhead Aqui você pode inserir informações adicionais sobre o pedido
								md-card-content
									div(layout-gt-xs='row')
										md-input-container(flex)
											label Observações
											textarea(ng-model='observacoes' md-maxlength='150' rows='3')

				section(layout='row' layout-align='center center')
					md-button.md-raised.md-primary 
						| Anterior
					md-button.md-raised.md-primary 
						| Seguinte